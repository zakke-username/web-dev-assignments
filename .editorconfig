root = true

[*]
charset = utf-8

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*]
end_of_line = lf

[*]
trim_trailing_whitespace = true

[*]
insert_final_newline = true

[*.{js,css,html}]
max_line_length = 80
